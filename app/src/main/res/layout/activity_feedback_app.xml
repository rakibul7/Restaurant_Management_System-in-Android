<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.mahbuburrahman.storemanagement.feedback_app">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/feedname"
        android:layout_margin="20dp"
        android:hint="Your Name "
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/feedcontent"
        android:layout_margin="20dp"
        android:hint="Your Feedback "


        />


    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/feedsend"
            android:text="Send"
            android:background="@drawable/shape_style"
            android:textColor="#f222"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/feedclear"
            android:text="Clear"
            android:background="@drawable/shape_style"
            android:textColor="#f222"/>
    </LinearLayout>
</LinearLayout>
