<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mahbuburrahman.resturantmanagement.activities.MainActivity">

<!--    <include layout="@layout/nav_drawer_layout"/>-->
<android.support.design.widget.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"/>



</android.support.design.widget.AppBarLayout>


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_container"

            />
        <android.support.design.widget.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nav_bottom_id"
            android:layout_gravity="bottom"
            app:menu="@menu/bottom_nav_menu"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/main_container"
            app:theme="@style/BottomNavigationTheme"
            app:itemBackground="@color/colorPrimary"
            app:itemTextColor="@color/colorBottomNav"
            />

    </android.support.design.widget.CoordinatorLayout>


</LinearLayout>
